{
  "name": "@kt3k/puncher",
  "version": "5.1.0",
  "description": "A nice punching of characters and images.",
  "main": "lib/puncher.js",
  "scripts": {
    "clean": "rimraf coverage puncher.* lib",
    "test": "karma start karma.conf.js",
    "lint": "standard",
    "dist:lib": "babel src -d lib",
    "dist:js": "browserify -t babelify src/puncher.js > puncher.js && uglifyjs puncher.js > puncher.min.js",
    "prepublish": "npm run clean && npm run dist:lib && npm run dist:js",
    "demo": "npm run dist:js && open demo/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kt3k/puncher.git"
  },
  "keywords": [
    "puncher",
    "jquery-plugin",
    "game"
  ],
  "author": "Yoshiya Hinosawa <stibium121@gmail.com> (https://twitter.com/kt3k)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kt3k/puncher/issues"
  },
  "homepage": "https://github.com/kt3k/puncher#readme",
  "peerDependencies": {
    "class-component": ">=9.0.0",
    "jquery": ">=2.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-eslint": "^7.1.0",
    "babel-preset-decorators-legacy": "^1.0.0",
    "babel-preset-es2015": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.3.0",
    "browserify-istanbul": "^2.0.0",
    "chai": "^3.5.0",
    "class-component": "^11.0.2",
    "isparta": "^4.0.0",
    "jquery": "^3.1.1",
    "karma": "^1.3.0",
    "karma-browserify": "^5.0.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.2.0",
    "mocha": "^3.1.2",
    "rimraf": "^2.5.4",
    "standard": "^8.6.0",
    "uglify-js": "^2.6.1",
    "watchify": "^3.7.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "decorators-legacy"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "env": [
      "mocha"
    ],
    "ignore": [
      "/puncher.js"
    ],
    "globals": [
      "$",
      "expect"
    ]
  }
}
